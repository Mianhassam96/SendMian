generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model File {
  id          String   @id @default(cuid())
  messageId   String   // For compatibility, can be 'standalone' for public uploads
  roomId      String   // For compatibility, can be 'public' for public uploads
  filename    String
  originalName String
  size        Int
  mimeType    String
  url         String
  key         String   // UploadThing key
  maxViews    Int?
  currentViews Int     @default(0)
  createdAt   DateTime @default(now())
  
  @@map("files")
}